import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

df = pd.read_csv("house_prediction_dataset_with_outliers.xls")
print(" Dataset Loaded Successfully!\n")

print(" Dataset Information:")
df.info()

print("\n Number of Rows and Columns:")
print(f"Rows: {df.shape[0]}, Columns: {df.shape[1]}")

print("\n Preview of Dataset:")
display(df.head())

print("\n Missing Values Count:")
print(df.isnull().sum())

Q1 = df["Price_$"].quantile(0.25)
Q3 = df["Price_$"].quantile(0.75)
IQR = Q3 - Q1

outliers = df[(df["Price_$"] < (Q1 - 1.5 * IQR)) | (df["Price_$"] > (Q3 + 1.5 * IQR))]

print(f"\n Number of Outliers in Price: {outliers.shape[0]}")
print("Outlier Records:")
display(outliers)

print("\n Descriptive Statistics:")
display(df.describe())

print("\n Correlation Matrix:")
display(df.corr(numeric_only=True))

plt.figure(figsize=(8,6))
sns.heatmap(df.corr(numeric_only=True), annot=True, cmap="coolwarm", fmt=".2f")
plt.title("Correlation Heatmap of House Features")
plt.show()

plt.figure(figsize=(8,5))
sns.barplot(x="Bedrooms", y="Price_$", data=df, palette="Blues_d", estimator=np.mean)
plt.title("Average House Price vs Number of Bedrooms")
plt.xlabel("Bedrooms")
plt.ylabel("Average Price ($)")
plt.tight_layout()
plt.show()

plt.figure(figsize=(8,5))
sns.scatterplot(x="Area_sqft", y="Price_$", data=df, color="purple", alpha=0.7)
plt.title("House Area vs Price")
plt.xlabel("Area (sqft)")
plt.ylabel("Price ($)")
plt.tight_layout()
plt.show()
